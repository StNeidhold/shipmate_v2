<!-- Validation failure messages -->
<% if @adjective.errors.any? %>
  <% @adjective.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Adjective</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_adjective" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for adjective_word -->
      <div class="form-group">
        <label for="adjective_word" class="control-label">
          Adjective word
        </label>

        <input type="text" id="adjective_word" name="adjective_word" placeholder="Adjective word" class="form-control" value="<%= @adjective.adjective_word %>">
      </div>

      <button class="btn btn-success">
        Create Adjective
      </button>
      or
      <a href="/adjectives">Cancel</a>
    </form>
  </div>
</div>
