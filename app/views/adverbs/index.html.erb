<div class="page-header">
  <h1>
    Adverbs
    <a href="/adverbs/new" class="btn btn-lg btn-success">New Adverb</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Adverb word</th>
        <th>Actions</th>
      </tr>

      <% @adverbs.each do |adverb| %>
      <tr>
        <td><%= adverb.adverb_word %></td>
        <td>
          <a href="/adverbs/<%= adverb.id %>" class="btn btn-primary">Show</a>
          <a href="/adverbs/<%= adverb.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_adverb/<%= adverb.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @adverbs, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
