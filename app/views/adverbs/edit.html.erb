<!-- Validation failure messages -->
<% if @adverb.errors.any? %>
  <% @adverb.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Adverb #<%= @adverb.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_adverb/<%= @adverb.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for adverb_word -->
      <div class="form-group">
        <label for="adverb_word" class="control-label">
          Adverb word
        </label>

        <input type="text" id="adverb_word" name="adverb_word" placeholder="Adverb word" class="form-control" value="<%= @adverb.adverb_word %>">
      </div>

      <button class="btn btn-warning">
        Update Adverb
      </button>
      or
      <a href="/adverbs/<%= @adverb.id %>">Cancel</a>
    </form>
  </div>
</div>
