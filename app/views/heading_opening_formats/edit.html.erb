<!-- Validation failure messages -->
<% if @heading_opening_format.errors.any? %>
  <% @heading_opening_format.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Heading Opening Format #<%= @heading_opening_format.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_heading_opening_format/<%= @heading_opening_format.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @heading_opening_format.description %>">
      </div>

      <button class="btn btn-warning">
        Update Heading Opening Format
      </button>
      or
      <a href="/heading_opening_formats/<%= @heading_opening_format.id %>">Cancel</a>
    </form>
  </div>
</div>
