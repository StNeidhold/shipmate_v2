<div class="page-header">
  <h1>
    Sailors
    <a href="/sailors/new" class="btn btn-lg btn-success">New Sailor</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "sailors_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :first_name_cont, "First name contains" %>
    <%= f.text_field :first_name_cont, :class => "form-control", :placeholder => "First name contains" %>
  </div>

<div class="form-group">
    <%= f.label :primary_responsibility_cont, "Primary responsibility contains" %>
    <%= f.text_field :primary_responsibility_cont, :class => "form-control", :placeholder => "Primary responsibility contains" %>
  </div>

<div class="form-group">
    <%= f.label :collateral_duty_3_cont, "Collateral duty 3 contains" %>
    <%= f.text_field :collateral_duty_3_cont, :class => "form-control", :placeholder => "Collateral duty 3 contains" %>
  </div>

<div class="form-group">
    <%= f.label :collateral_duty_2_cont, "Collateral duty 2 contains" %>
    <%= f.text_field :collateral_duty_2_cont, :class => "form-control", :placeholder => "Collateral duty 2 contains" %>
  </div>

<div class="form-group">
    <%= f.label :collateral_duty_1_cont, "Collateral duty 1 contains" %>
    <%= f.text_field :collateral_duty_1_cont, :class => "form-control", :placeholder => "Collateral duty 1 contains" %>
  </div>

<div class="form-group">
    <%= f.label :position_cont, "Position contains" %>
    <%= f.text_field :position_cont, :class => "form-control", :placeholder => "Position contains" %>
  </div>

<div class="form-group">
    <%= f.label :rating_cont, "Rating contains" %>
    <%= f.text_field :rating_cont, :class => "form-control", :placeholder => "Rating contains" %>
  </div>

<div class="form-group">
    <%= f.label :rank_cont, "Rank contains" %>
    <%= f.text_field :rank_cont, :class => "form-control", :placeholder => "Rank contains" %>
  </div>

<div class="form-group">
    <%= f.label :command_cont, "Command contains" %>
    <%= f.text_field :command_cont, :class => "form-control", :placeholder => "Command contains" %>
  </div>

<div class="form-group">
    <%= f.label :division_cont, "Division contains" %>
    <%= f.text_field :division_cont, :class => "form-control", :placeholder => "Division contains" %>
  </div>

<div class="form-group">
    <%= f.label :middle_name_cont, "Middle name contains" %>
    <%= f.text_field :middle_name_cont, :class => "form-control", :placeholder => "Middle name contains" %>
  </div>

<div class="form-group">
    <%= f.label :last_name_cont, "Last name contains" %>
    <%= f.text_field :last_name_cont, :class => "form-control", :placeholder => "Last name contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/sailors" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#sailors_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Middle name</th>
        <th>Division</th>
        <th>Command</th>
        <th>Rank</th>
        <th>Rating</th>
        <th>Position</th>
        <th>Collateral duty 1</th>
        <th>Collateral duty 2</th>
        <th>Collateral duty 3</th>
        <th>Primary responsibility</th>
        <th>Actions</th>
      </tr>

      <% @sailors.each do |sailor| %>
      <tr>
        <td><%= sailor.first_name %></td>
        <td><%= sailor.last_name %></td>
        <td><%= sailor.middle_name %></td>
        <td><%= sailor.division %></td>
        <td><%= sailor.command %></td>
        <td><%= sailor.rank %></td>
        <td><%= sailor.rating %></td>
        <td><%= sailor.position %></td>
        <td><%= sailor.collateral_duty_1 %></td>
        <td><%= sailor.collateral_duty_2 %></td>
        <td><%= sailor.collateral_duty_3 %></td>
        <td><%= sailor.primary_responsibility %></td>
        <td>
          <a href="/sailors/<%= sailor.id %>" class="btn btn-primary">Show</a>
          <a href="/sailors/<%= sailor.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_sailor/<%= sailor.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @sailors, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
