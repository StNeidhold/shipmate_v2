<div class="page-header">
  <h3>Bullet Format #<%= @bullet_format.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Description</dt>
      <dd><%= @bullet_format.description %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/bullet_formats" class="btn btn-primary">
        Back
      </a>
      <a href="/bullet_formats/<%= @bullet_format.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_bullet_format/<%= @bullet_format.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Bullet format has many write_ups -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Write_ups
      </li>

      <% @bullet_format.write_ups.each do |write_up| %>
        <li class="list-group-item">
          <a href="/write_ups/<%= write_up.id %>">
            <%= write_up.breakout_statement_text %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/write_ups/<%= write_up.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/write_ups/<%= write_up.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_write_up/<%= write_up.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
