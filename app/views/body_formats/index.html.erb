<div class="page-header">
  <h1>
    Body formats
    <a href="/body_formats/new" class="btn btn-lg btn-success">New Body format</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @body_formats.each do |body_format| %>
      <tr>
        <td><%= body_format.description %></td>
        <td>
          <a href="/body_formats/<%= body_format.id %>" class="btn btn-primary">Show</a>
          <a href="/body_formats/<%= body_format.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_body_format/<%= body_format.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @body_formats, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
