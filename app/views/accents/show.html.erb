<div class="page-header">
  <h3>Accent #<%= @accent.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Description</dt>
      <dd><%= @accent.description %></dd>

      <dt>Text</dt>
      <dd><%= @accent.text %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/accents" class="btn btn-primary">
        Back
      </a>
      <a href="/accents/<%= @accent.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_accent/<%= @accent.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
