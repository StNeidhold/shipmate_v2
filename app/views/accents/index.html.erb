<div class="page-header">
  <h1>
    Accents
    <a href="/accents/new" class="btn btn-lg btn-success">New Accent</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Description</th>
        <th>Text</th>
        <th>Actions</th>
      </tr>

      <% @accents.each do |accent| %>
      <tr>
        <td><%= accent.description %></td>
        <td><%= accent.text %></td>
        <td>
          <a href="/accents/<%= accent.id %>" class="btn btn-primary">Show</a>
          <a href="/accents/<%= accent.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_accent/<%= accent.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @accents, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
