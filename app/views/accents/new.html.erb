<!-- Validation failure messages -->
<% if @accent.errors.any? %>
  <% @accent.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Accent</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_accent" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @accent.description %>">
      </div>

      <!-- Label and input for text -->
      <div class="form-group">
        <label for="text" class="control-label">
          Text
        </label>

        <input type="text" id="text" name="text" placeholder="Text" class="form-control" value="<%= @accent.text %>">
      </div>

      <button class="btn btn-success">
        Create Accent
      </button>
      or
      <a href="/accents">Cancel</a>
    </form>
  </div>
</div>
