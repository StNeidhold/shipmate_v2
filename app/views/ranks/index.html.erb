<div class="page-header">
  <h1>
    Ranks
    <a href="/ranks/new" class="btn btn-lg btn-success">New Rank</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Rank name</th>
        <th>Actions</th>
      </tr>

      <% @ranks.each do |rank| %>
      <tr>
        <td><%= rank.rank_name %></td>
        <td>
          <a href="/ranks/<%= rank.id %>" class="btn btn-primary">Show</a>
          <a href="/ranks/<%= rank.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_rank/<%= rank.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @ranks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
