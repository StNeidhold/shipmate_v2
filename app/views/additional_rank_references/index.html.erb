<div class="page-header">
  <h1>
    Additional rank references
    <a href="/additional_rank_references/new" class="btn btn-lg btn-success">New Additional rank reference</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Rank</th>
        <th>Rank reference text</th>
        <th>Actions</th>
      </tr>

      <% @additional_rank_references.each do |additional_rank_reference| %>
      <tr>
        <td>
          <% if additional_rank_reference.rank.present? %>
            <a href="/ranks/<%= additional_rank_reference.rank.id %>">
              <%= additional_rank_reference.rank.rank_name %>
            </a>
          <% end %>
        </td>
        <td><%= additional_rank_reference.rank_reference_text %></td>
        <td>
          <a href="/additional_rank_references/<%= additional_rank_reference.id %>" class="btn btn-primary">Show</a>
          <a href="/additional_rank_references/<%= additional_rank_reference.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_additional_rank_reference/<%= additional_rank_reference.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @additional_rank_references, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
