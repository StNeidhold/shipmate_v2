<div class="page-header">
  <h1>
    Eval groups
    <a href="/eval_groups/new" class="btn btn-lg btn-success">New Eval group</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Group name</th>
        <th>Group description</th>
        <th>Group rank</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @eval_groups.each do |eval_group| %>
      <tr>
        <td><%= eval_group.group_name %></td>
        <td><%= eval_group.group_description %></td>
        <td><%= eval_group.group_rank %></td>
        <td>
          <% if eval_group.user.present? %>
            <a href="/users/<%= eval_group.user.id %>">
              <%= eval_group.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/eval_groups/<%= eval_group.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == eval_group.user %>
            <a href="/eval_groups/<%= eval_group.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_eval_group/<%= eval_group.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @eval_groups, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
