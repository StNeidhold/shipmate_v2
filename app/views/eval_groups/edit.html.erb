<!-- Validation failure messages -->
<% if @eval_group.errors.any? %>
  <% @eval_group.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Eval Group #<%= @eval_group.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_eval_group/<%= @eval_group.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for group_name -->
      <div class="form-group">
        <label for="group_name" class="control-label">
          Group name
        </label>

        <input type="text" id="group_name" name="group_name" placeholder="Group name" class="form-control" value="<%= @eval_group.group_name %>">
      </div>

      <!-- Label and input for group_description -->
      <div class="form-group">
        <label for="group_description" class="control-label">
          Group description
        </label>

        <input type="text" id="group_description" name="group_description" placeholder="Group description" class="form-control" value="<%= @eval_group.group_description %>">
      </div>

      <!-- Label and input for group_rank -->
      <div class="form-group">
        <label for="group_rank" class="control-label">
          Group rank
        </label>

        <input type="text" id="group_rank" name="group_rank" placeholder="Group rank" class="form-control" value="<%= @eval_group.group_rank %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @eval_group.user_id %>">
      </div>

      <button class="btn btn-warning">
        Update Eval Group
      </button>
      or
      <a href="/eval_groups/<%= @eval_group.id %>">Cancel</a>
    </form>
  </div>
</div>
