<!-- Validation failure messages -->
<% if @noun.errors.any? %>
  <% @noun.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Noun</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_noun" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for noun_word -->
      <div class="form-group">
        <label for="noun_word" class="control-label">
          Noun word
        </label>

        <input type="text" id="noun_word" name="noun_word" placeholder="Noun word" class="form-control" value="<%= @noun.noun_word %>">
      </div>

      <button class="btn btn-success">
        Create Noun
      </button>
      or
      <a href="/nouns">Cancel</a>
    </form>
  </div>
</div>
