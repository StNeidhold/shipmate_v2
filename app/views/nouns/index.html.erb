<div class="page-header">
  <h1>
    Nouns
    <a href="/nouns/new" class="btn btn-lg btn-success">New Noun</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Noun word</th>
        <th>Actions</th>
      </tr>

      <% @nouns.each do |noun| %>
      <tr>
        <td><%= noun.noun_word %></td>
        <td>
          <a href="/nouns/<%= noun.id %>" class="btn btn-primary">Show</a>
          <a href="/nouns/<%= noun.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_noun/<%= noun.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
